h2.sub-header = <%= model_class %>.model_name.human(count: 2)

<%- if blueprint.has_zone? -%>
= render 'admin/partials/zone_switcher'
<%- end -%>

.table-responsive
  table.table.table-striped
    thead
      tr
        <%- fields.first(3).each do |attr| -%>
        th = <%= model_class %>.human_attribute_name(:<%= attr %>)
        <%- end -%>

    tbody
      - @<%= plural_name %>.each do |<%= singular_name %>|
        tr
          <%- fields.first(3).each_with_index do |attr,i| -%>
            <%- if i == 0 -%>
          td = link_to <%= singular_name %>.<%= attr %>, edit_<%= resource_path_for(singular_name) %>
            <%- else -%>
          td = <%= singular_name %>.<%= attr %>
            <%- end -%>

          <%- end -%>

= paginate @<%= plural_name %>
