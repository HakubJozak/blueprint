h2.sub-header = <%= model_class %>.model_name.human(count: 2)

.table-responsive
  table.table.table-striped
    thead
      tr
        <%- fields.first(3).each do |attr| -%>
        th = <%= model_class %>.human_attribute_name(:<%= attr %>)
        <%- end -%>
        th.text-right
          = link_to(t('.new'), <%= new_path %>, class: 'btn btn-success')

    tbody
      - @<%= plural_name %>.each do |<%= singular_name %>|
        tr
          <%- fields.first(3).each_with_index do |attr,i| -%>
            <%- if i == 0 -%>
          td = link_to <%= singular_name %>.<%= attr %>, <%= edit_path %>
            <%- else -%>
          td
            = <%= singular_name %>.<%= attr %>
            <%- end -%>
          td
            = delete_button <%= singular_name %>, <%= show_path %>

          <%- end -%>

= paginate @<%= plural_name %>
